#!/bin/bash

if [ "$#" -ne 1 ];
then
    echo
    echo "Returns the list of commits that need to be reworked. Only returns the commits that are older than the number of days given as parameter."
    echo
    echo "Returns the commits that:"
    echo "* have either a verified -1 or a code review -2."
    echo "* are more than 'N' days old"
    echo
    echo "The return format is json."
    echo
    echo "Usage: \"get-invalid <number_of_days>\""
    echo
    exit -1
fi

AGE=$1

ssh review.tizen.org gerrit query --format json "status:open age:${AGE}d (label:Verified-1 OR label:Code-Review-2)"